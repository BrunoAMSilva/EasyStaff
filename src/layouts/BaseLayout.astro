---
import { Icon } from "astro-icon/components";
import PartiturePicker from "../components/partiture/PartiturePicker.astro";
import "../styles/global.css";
---

<html
    lang="en"
    class="bg-gray-200 dark:bg-gray-900 text-gray-900 dark:text-gray-200"
>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>EasyStaff</title>
    </head>
    <body class="notation-letter beats-visible">
        <nav
            class="p-4 border-b border-gray-300 dark:border-gray-700 mb-8 shadow-lg bg-gray-100 dark:bg-gray-800"
        >
            <div class="flex justify-between mx-auto max-w-4xl">
                <a class="text-2xl" href="/">EasyStaff</a>
                <div class="flex items-center space-x-4">
                    <a href="https://github.com/BrunoAMSilva/EasyStaff" target="_blank" rel="noopener noreferrer" class="button outlined" aria-label="View source on GitHub">
                        <Icon name="mdi:github" class="w-6 h-6" />
                    </a>
                    <PartiturePicker />
                </div>
            </div>
        </nav>
    </body>
    <main id="main">
        <slot />
    </main>
</html>
