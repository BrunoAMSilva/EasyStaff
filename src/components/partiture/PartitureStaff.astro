---
import { Icon } from "astro-icon/components";
interface Props {
    staffNumber: number;
    clef: "treble" | "bass" | "alto" | "tenor";
}
const { staffNumber, clef } = Astro.props as Props;
---

{
    Array.from({ length: 5 }).map((_, idx) => (
        <hr
            style={`grid-row: ${(staffNumber - 1) * 13 + idx * 2 + 3};`}
            class="self-center col-span-full border-t-2 border-gray-600 dark:border-gray-400"
        />
    ))
}
{
    clef === "treble" && (
        <Icon
            name="g-clef"
            class={`sticky -mb-100 -mt-93 col-1 -left-20 pointer-events-none  -translate-x-19 text-gray-700 dark:text-gray-500 self-center z-10`}
            style={`grid-row: ${(staffNumber - 1) * 13 + 1} / span 13; width: 28em; height: auto; aspect-ratio: 1;`}
        />
    )
}
{
    clef === "bass" && (
        <Icon
            name="f-clef"
            class={`sticky -my-50 col-1 pointer-events-none bottom-10 -left-20 -translate-x-2 text-gray-700 dark:text-gray-500 self-center z-10`}
            style={`grid-row: ${(staffNumber - 1) * 13 + 1} / span 13; width: 21.5em; height: auto; aspect-ratio: 1;`}
        />
    )
}
